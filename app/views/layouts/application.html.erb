<!DOCTYPE html>
<html>
<head>
  <title>TellFile</title>
  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track' => true %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track' => true %>
  <script type="text/javascript">
	setTimeout("$('.alert').fadeOut('slow')", 5000)
  </script>
  <%= csrf_meta_tags %>
</head>
<body>
		<% if user_signed_in? %>
			<div class="sign_out_box"><%= link_to 'Sign out', destroy_user_session_path, :method => :delete %></div>
		<% else %>
			<div class="title_box"><%= link_to 'TellFile', new_user_session_path %></div>
	<% end %>


<p class="notice"><%= notice %></p>
<p class="alert"><%= alert %></p>


<%= yield %>

</body>
</html>



